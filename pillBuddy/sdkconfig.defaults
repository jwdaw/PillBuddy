# Enable FATFS read only with long filename support
# for loading Cert/CA/etc from filesystem
# (if enabled in config)
CONFIG_FATFS_READONLY=y
CONFIG_FATFS_CODEPAGE_437=y
CONFIG_FATFS_LFN_HEAP=y

# Enable TLS asymmetric in/out content length
CONFIG_MBEDTLS_ASYMMETRIC_CONTENT_LEN=y

# Example configs
CONFIG_WIFI_SSID="Brians iPhone"
CONFIG_WIFI_PASSWORD="clemson1"
CONFIG_AWS_EXAMPLE_CLIENT_ID="pillbuddy-client-1"

# PillBuddy app defaults
CONFIG_PILL_DEVICE_ID="pillbuddy-esp32-1"
CONFIG_PILL_EVENT_TOPIC_BASE="pillbuddy/events"
CONFIG_PILL_COMMAND_TOPIC_BASE="pillbuddy/cmd"
CONFIG_PILL_SENSOR_DEBOUNCE_MS=120
CONFIG_PILL_SWITCH_USE_INTERNAL_PULLUP=y
CONFIG_PILL_SLOT1_SW_GPIO=14
CONFIG_PILL_SLOT2_SW_GPIO=27
CONFIG_PILL_SLOT3_SW_GPIO=26
CONFIG_PILL_SLOT1_LED_GPIO=25
CONFIG_PILL_SLOT2_LED_GPIO=33
CONFIG_PILL_SLOT3_LED_GPIO=32
